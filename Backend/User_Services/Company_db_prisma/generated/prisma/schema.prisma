generator client {
  provider = "prisma-client-js"
  output   = "../Company_db_prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("COMPANY_DATABASE_URL")
}

model User {
  firstname String
  lastname  String
  email     String  @unique
  password  String
  empId     Int     @unique
  company   String  @default("Company A")
  role      String?
}

model Role {
  role_id Int    @id @default(autoincrement())
  role    String @unique
}
