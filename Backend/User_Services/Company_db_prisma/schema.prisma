generator client {
  provider = "prisma-client-js"
  output   = "../Company_db_prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url=  env("COMPANY_DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstname String 
  lastname String?
  email String @unique
  empId Int @unique 
  role_id Int?
  role Role? @relation(fields: [role_id],references: [role_id])

  task Tasks[]
}


model Role {
  role_id Int @id 
  name String? @unique

  task Tasks[]
  user User[]
  

}

model Tasks {
  task_id Int @id @default(autoincrement())
  workflow_id Int
  workflow Workflow @relation(fields : [workflow_id],references: [id] )
  state_name String?
  assigned_to Int
  user User? @relation(fields: [assigned_to],references: [empId])
  created_by Int?
  role_id Int
  role Role? @relation(fields: [role_id],references: [role_id])
}

model Workflow {
  id Int @id @default(autoincrement()) 
  workflow_name String? @unique



  task Tasks[]
  rules Workflow_Rules[]
}

model Workflow_Rules{
    id Int @id @default(autoincrement())
    workflow_id Int 
   workflow Workflow? @relation(fields:[workflow_id], references: [id])
    state_1 String?
    state_2 String?
    role_id Int
}


