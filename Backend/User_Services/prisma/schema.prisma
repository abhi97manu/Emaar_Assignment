generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


model User {
  firstname String 
  lastname String
  email String @unique
  password String 
  empId Int @unique
  company String @default("Company A")
  role String?
}

model Admin {
  firstname String 
  lastname String
  email String @unique
  password String 
  empId Int @unique
  role String @default("Admin")
}

model Role {
  role_id Int @id @default(autoincrement())
  role String @unique
}